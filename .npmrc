# pnpm configuration
shamefully-hoist=true
strict-peer-dependencies=false
auto-install-peers=true

# Monorepo specific settings
node-linker=hoisted
prefer-workspace-packages=true

# Lock file settings
lockfile-only=false

# Install optimizations - allow all build scripts
ignore-scripts=false

# pnpm 10+ requires explicit approval for build scripts
# This approves common native modules
onlyBuiltDependencies=bcrypt,better-sqlite3,sqlite3,bufferutil,es5-ext,protobufjs
