# StackLens AI - Production Environment Configuration
# Domain: stacklens.app
# Copy this file to .env and update the values

# ===========================================
# Application URLs (Update for production)
# ===========================================
NODE_ENV=production

# Main Application
APP_URL=https://stacklens.app
API_URL=https://api.stacklens.app
VITE_API_URL=https://api.stacklens.app

# POS Application
POS_APP_URL=https://pos.stacklens.app
POS_API_URL=https://posapi.stacklens.app
VITE_POS_API_URL=https://posapi.stacklens.app

# ===========================================
# Server Configuration (Bind to all interfaces for Cloudflare)
# ===========================================
# Main API Server
PORT=4000
HOST=0.0.0.0

# Main Frontend (Vite)
VITE_PORT=5173
VITE_HOST=0.0.0.0

# POS Backend
POS_PORT=3000
POS_HOST=0.0.0.0

# POS Frontend
VITE_POS_PORT=5174

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=https://stacklens.app,https://www.stacklens.app,https://pos.stacklens.app

# ===========================================
# Cookie/Session Configuration
# ===========================================
COOKIE_SECURE=true
COOKIE_DOMAIN=.stacklens.app
SESSION_SECRET=your_secure_session_secret_here_change_me

# ===========================================
# Database Configuration
# ===========================================
# SQLite (local file)
DB_PATH=./data/database/stacklens.db

# PostgreSQL (if using)
# DATABASE_URL=postgresql://stacklens:password@127.0.0.1:5432/stacklens

# ===========================================
# AI/ML API Keys
# ===========================================
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your_jwt_secret_here_change_me
JWT_EXPIRES_IN=7d

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# Optional: Infrastructure Services
# These only if running Kafka/Elasticsearch/etc
# ===========================================
# KAFKA_BROKERS=127.0.0.1:9094
# ELASTICSEARCH_URL=http://127.0.0.1:9200
# OTEL_EXPORTER_OTLP_ENDPOINT=http://127.0.0.1:4318
